<Window x:Class="Project7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="749*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="MainDataGrid" HorizontalAlignment="Left" Height="244" Margin="10,10,0,0" VerticalAlignment="Top" Width="326" Initialized="DataGrid_Initialized" BorderThickness="2"/>
        <GroupBox Header="Главная диагональ" HorizontalAlignment="Left" Height="124" Margin="357,10,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="MainDiagonalSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Initialized="MainDiagonalSum_Initialized"/>
        </GroupBox>
        <Label x:Name="MainDiagonaMin" Content="Минимальный элемент:" HorizontalAlignment="Left" Margin="363,61,0,0" VerticalAlignment="Top" Initialized="MainDiagonaMin_Initialized"/>
        <Label x:Name="MainDiagonalMax" Content="Максимальный элемент:" HorizontalAlignment="Left" Margin="363,87,0,0" VerticalAlignment="Top" Initialized="MainDiagonalMax_Initialized"/>
        <GroupBox Header="Побочная диагональ" HorizontalAlignment="Left" Height="124" Margin="557,10,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="AlterDiagonalSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Initialized="AlterDiagonalSum_Initialized"/>
        </GroupBox>
        <Label x:Name="AlterDiagonaMin" Content="Минимальный элемент:" HorizontalAlignment="Left" Margin="566,61,0,0" VerticalAlignment="Top" Initialized="AlterDiagonaMin_Initialized"/>
        <Label x:Name="AlterDiagonalMax" Content="Максимальный элемент:" HorizontalAlignment="Left" Margin="566,87,0,0" VerticalAlignment="Top" Initialized="AlterDiagonalMax_Initialized"/>
        <GroupBox Header="Верхний треугольник" HorizontalAlignment="Left" Height="124" Margin="357,139,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="UpTriforceSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Initialized="MainDiagonalSum_Initialized"/>
        </GroupBox>
        <GroupBox Header="Нижний треугольник" HorizontalAlignment="Left" Height="124" Margin="557,139,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="MainDiagonalSum2" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Initialized="MainDiagonalSum_Initialized"/>
        </GroupBox>
        <GroupBox Header="Левый треугольник" HorizontalAlignment="Left" Height="124" Margin="357,285,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="MainDiagonalSum3" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Initialized="MainDiagonalSum_Initialized"/>
        </GroupBox>
        <GroupBox Header="Правый треугольник" HorizontalAlignment="Left" Height="124" Margin="557,285,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="MainDiagonalSum4" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Initialized="MainDiagonalSum_Initialized"/>
        </GroupBox>

    </Grid>
</Window>
