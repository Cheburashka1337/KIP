<Window x:Class="Project7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="MainDataGrid" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="290" Initialized="DataGrid_Initialized"/>
        <GroupBox Header="Главная диагональ" HorizontalAlignment="Left" Height="124" Margin="357,10,0,0" VerticalAlignment="Top" Width="172">
            <Label x:Name="MainDiagonalSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
        </GroupBox>
        <Label x:Name="MainDiagonaMin" Content="Минимальный элемент:" HorizontalAlignment="Left" Margin="363,61,0,0" VerticalAlignment="Top" Initialized="MainDiagonaMin_Initialized"/>
        <Label x:Name="MainDiagonalMax" Content="Максимальный элемент:" HorizontalAlignment="Left" Margin="363,87,0,0" VerticalAlignment="Top" Initialized="MainDiagonalMax_Initialized"/>

    </Grid>
</Window>
