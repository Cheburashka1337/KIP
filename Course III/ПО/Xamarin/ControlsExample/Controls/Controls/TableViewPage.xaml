<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.TableViewPage">
    <TableView>
        <TableView.Root>
            <TableRoot>
                <TableSection Title="Personal info">
                    <EntryCell Label="Login" Keyboard="Default"
                               Placeholder="Enter your login"/>
                    <SwitchCell Text="Save"/>
                </TableSection>
                <TableSection Title="Contact info">
                    <EntryCell Label="Tel" Keyboard="Telephone"
                               Placeholder="Your phone"/>
                    <EntryCell Label="Email" Keyboard="Email"
                               Placeholder="Your email" />
                </TableSection>
            </TableRoot>
        </TableView.Root>
    </TableView>
</ContentPage>